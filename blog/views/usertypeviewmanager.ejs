<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <%- include simplehead %>
</head>
<html>

<body>
    <%- include header %>
        <div class="container" style="margin-top: 30px; margin-bottom: 30px;">
            <div class="card hoverable" style="padding: 20px;">
                <div style="margin: 20px;">
                    <h3><%= usertypes[0].usertype +"角色的视图"%></h3>
                    <table class="bordered responsive-table">
                        <thead>
                            <tr>
                                <th data-field="id">权限ID</th>
                                <th data-field="usertype">用户类型</th>
                                <th data-field="viewname">View名</th>
                                <th data-field="authname">View路径</th>
                                <th data-field="descripe">描述</th>
                                 <th data-field="">状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% usertypes.forEach(function(item){ %>
                                <tr>
                                    <td>
                                        <%= item.id %>
                                    </td>
                                    <td>
                                        <%= item.usertype %>
                                    </td>
                                    <td>
                                        <%= item.viewname %>
                                    </td>
                                    <td>
                                        <%= item.url %>
                                    </td>
                                    <td>
                                        <%= item.descripe %>
                                    </td>
                                    <% if(item.auth>0) {%>
                                        <td>启用</td>
                                        <td>
                                            <a onclick="onlypost('<%= "/admin/auth/usertypeview/disable/" + item.id+"/"+typeid %>');"  class="btn red waves-effect waves-light red" >禁用</a></td>
                                        <%} else { %>
                                            <td>禁用</td>
                                            <td>
                                                <a onclick="onlypost('<%="/admin/auth/usertypeview/enable/" + item.id+"/"+typeid %>');" class="btn waves-effect waves-light">启用</a> </td>
                                            <% } %>
                                </tr>
                                <% });%>
                        </tbody>
                    </table>
                </div>
                <div></div>
            </div>
        </div>
        <%- include footer %>
</body>

</html>
