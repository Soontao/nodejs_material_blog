<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <%- include simplehead %>
</head>
<html>

<body>
    <%- include header %>
        <div class="container" style="margin-top: 30px; margin-bottom: 30px;">
            <div class="card hoverable" style="padding: 20px;">
                <div style="margin: 20px;">
                    <h3>用户类型</h3>
                    <table class="bordered responsive-table">
                        <thead>
                            <tr>
                                <th data-field="id">ID</th>
                                <th data-field="usertype">用户类型</th>
                                <th data-field="descripe">描述</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% usertypes.forEach(function(item){ %>
                                <tr>
                                    <td>
                                        <%= item.id %>
                                    </td>
                                    <td>
                                        <%= item.usertype %>
                                    </td>
                                    <td>
                                        <%= item.descripe %>
                                    </td>
                                    <td>
                                        <a href=<%="/admin/auth/usertype/update/" + item.id %> class="btn waves-effect waves-light blue" >修改</a>
                                        <a onclick="javascript:onlypost('<%=" /admin/auth/usertype/delete/" +item.id %> ')" class="btn waves-effect waves-light red ">删除</a>
                                        <a href=<%="/admin/auth/usertypeapi/manager/" +item.id %> class="btn waves-effect waves-light ">API管理</a>
                                        <a href=<%="/admin/auth/usertypeview/manager/" +item.id %> class="btn waves-effect waves-light ">VIEW管理</a>
                                    </td>
                                </tr>
                                <% });%>
                        </tbody>
                    </table>
                </div>
                <div></div>
                <div style=" margin: 20px; ">
                    <a href="/admin/auth/usertype/add ">
                        <button style="margin: 30px; " class="btn ">添加用户类型</button>
                    </a>
                </div>
            </div>
        </div>
        <%- include footer %>
</body>

</html>
