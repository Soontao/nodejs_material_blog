<!DOCTYPE html>
<html lang="zh-CN">
<%- include head %>

    <body>
        <%- include header %>
            <div class="container" style="margin-top: 30px; margin-bottom: 30px;">
                <div>
                    <ul class="collapsible" data-collapsible="expandable">
                        <li>
                            <div class="collapsible-header ">
                                <h5>管理概览</h5>
                            </div>
                            <div class="collapsible-body">
                            </div>
                        </li>
                        <li>
                            <%- include userinfo %>
                        </li>
                        <li>
                            <% if(sessionuser.usertype==1) {%>
                                <%- include managemsg %>
                            <% } %>
                        </li>
                        <li>
                            <div class="collapsible-header active">操作</div>
                            <div class="collapsible-body">
                                <div class="collection with-header">
                                        <% 
                                        views.forEach(function(view){
                                        switch(view.viewname){
                                        case "usermanager":  %>
                                        <a href="/admin/users/usermanager" class="collection-item">用户管理</a>
                                        <%break; case "blogmanager": %>
                                        <a href="/articles/blogmanager" class="collection-item">博文管理</a>
                                        <%break; case "commentmanager":%>
                                        <a href="/articles/comment/commentmanager" class="collection-item">评论管理</a>
                                        <%break; case "usertypemanager":%>
                                        <a href="/admin/auth/usertype/manager" class="collection-item">权限管理</a>
                                        <%break; case "costume":%>
                                        <a href="/admin/costume" class="collection-item">个性化</a>
                                        <%  break; default : break; }});%>
                                        <a href="javascript:logout()" class="collection-item">退出</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <%- include footer %>
    </body>

</html>
