<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <%- include simplehead %>
    <title>博客管理</title>
</head>
<html>

<body>
    <%- include header %>
        <div class="container" style="margin-top: 30px; margin-bottom: 30px;">
            <div class="card hoverable" style="padding: 20px;">
                <div style="margin: 20px;">
                    <h3>博客管理</h3>
                    <table class="bordered responsive-table">
                        <thead>
                            <tr>
                                <th data-field="id">博客ID</th>
                                <th data-field="title">标题</th>
                                <th data-field="content">内容长度</th>
                                <th data-field="nickname">用户昵称</th>
                                <th data-field="create_date">创建日期</th>
                                <th data-field="modify_date">修改日期</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% articles.forEach(function(article){ %>
                                <tr>
                                    <td>
                                        <%= article.id %>
                                    </td>
                                    <td>
                                        <%= article.title %>
                                    </td>
                                    <td>
                                        <%= article.content.length %>
                                    </td>
                                    <td>
                                        <%= article.nickname %>
                                    </td>
                                    <td>
                                        <%= new Date(article.create_date).toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <%= new Date(article.modify_date).toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <a href=<%="/articles/editblog/" + article.id %> class="btn waves-effect waves-light">修改</a>
                                        <a onclick="onlypost('<%="/articles/deleteblog/" + article.id %>')" class="btn waves-effect waves-light red ">删除</a>
                                    </td>
                                </tr>
                                <% });%>
                        </tbody>
                    </table>
                </div>
                <div></div>
                <br>
            </div>
            <% if(page){ %>
                <%- include page %>
                    <% } %>
        </div>
        <%- include footer %>
</body>

</html>
