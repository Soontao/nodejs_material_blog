<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <%- include simplehead %></head>
  <html>
<body>
    <%- include header %>
    <div class="container" style="margin-top: 30px; margin-bottom: 30px;">
            <div class="card hoverable"style="
    padding: 20px;
">
        <br>

        <div >
          <table class="bordered responsive-table" style="
    margin: 20px;
">
            <thead>
              <tr>
                <th data-field="id">用户ID</th>
                <th data-field="username">登录名</th>
                <th data-field="nickname">用户昵称</th>
                <th data-field="usertype">用户类型</th>
                <th data-field="comment">备注</th>
                <th>操作</th>
              </tr>
            </thead>

            <tbody>
              <% users.forEach(function(user){ %>

              <tr>
                <td>
                  <%= user.id %></td>
                <td>
                  <%= user.username %></td>
                <td>
                  <%= user.nickname %></td>
                <% if(user.usertype==1){%>
                <td>
                  <%= "管理员" %></td>
                <% } else if(user.usertype==2){ %>
                <td>
                  <%= "普通用户" %></td>
                <%} else{%>
                <td>
                  <%= "未定义" %></td>
                <% } %>
                <td>
                  <%= user.comment %></td>
                <td>
                  <a href=<%= "/admin/users/update/" + user.id %> class="btn waves-effect waves-light">修改</a>
                  <a href="#!" onclick="deleteuser(<%- user.id %>)" class="btn waves-effect waves-light red">删除</a>
                </td>
              </tr>
              <% });%></tbody>
          </table>

        </div>

        <div></div>
        <div style="
    margin: 20px;">
          <a href="/admin/users/add" >
            <button style="margin: 30px;" class="btn ">添加用户</button>
          </a>
        </div>
      </div>
    <% if(page){ %>
        <%- include page %>
    <% } %>

    </div>



    <%- include footer %>

  </body>

  </html>